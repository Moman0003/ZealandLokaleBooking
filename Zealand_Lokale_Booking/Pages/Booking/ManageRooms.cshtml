@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Zealand_Lokale_Booking.Pages.Booking.ManageRoomsModel
@{
ViewData["Title"] = "Administrer Lokaler";
}

<h1>Administrer Lokaler</h1>

@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
<div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="btn-group mb-3" role="group" aria-label="Filter lokaler">
    <a class="btn btn-primary @(Model.Filter == "all" ? "active" : "")" href="?filter=all">Alle Lokaler</a>
    <a class="btn btn-primary @(Model.Filter == "booked" ? "active" : "")" href="?filter=booked">Bookede Lokaler</a>
    <a class="btn btn-primary @(Model.Filter == "available" ? "active" : "")" href="?filter=available">Ledige Lokaler</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th>Lokale</th>
        <th>Type</th>
        <th>Kapacitet</th>
        <th>Status</th>
        <th>Booket Af</th>
        <th>Handling</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var room in Model.Rooms)
    {
    <tr>
        <td>@room.RoomName</td>
        <td>@room.RoomType</td>
        <td>@room.Capacity</td>
        <td>
            @if (room.IsBooked)
            {
            <span class="badge bg-danger">Booket</span>
            }
            else
            {
            <span class="badge bg-success">Ledigt</span>
            }
        </td>
        <td>@(room.IsBooked ? room.BookedByUser?.FirstName ?? "Ukendt" : "-")</td>
        <td>
            @if (room.IsBooked)
            {
            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#cancelBookingModal-@room.RoomId">
                Annuller Booking
            </button>
            }
            else
            {
            <button class="btn btn-secondary btn-sm" disabled>Ingen Handling</button>
            }
        </td>
    </tr>

    <!-- Modal til bekræftelse af annullering -->
    <div class="modal fade" id="cancelBookingModal-@room.RoomId" tabindex="-1" aria-labelledby="cancelBookingModalLabel-@room.RoomId" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelBookingModalLabel-@room.RoomId">Annuller Booking</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Er du sikker på, at du vil annullere bookingen for "<strong>@room.RoomName</strong>"?</p>
                </div>
                <div class="modal-footer">
                    <form method="post" asp-page-handler="CancelBooking">
                        <input type="hidden" name="roomId" value="@room.RoomId" />
                        <button type="submit" class="btn btn-danger">Annuller</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fortryd</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    }
    </tbody>
</table>
