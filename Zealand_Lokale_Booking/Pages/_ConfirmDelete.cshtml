@model ZealandLokaleBooking.Models.Booking

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bekræft Sletning</title>
</head>
<body>
<div class="container mt-5">
    <h2>Bekræft Sletning</h2>
    <p>Er du sikker på, at du vil slette denne booking?</p>

    <div class="card">
        <div class="card-body">
            <h4>Lokale: @Model.Room.RoomName</h4>
            <p><strong>Dato:</strong> @Model.Date.ToShortDateString()</p>
            <p><strong>Tid:</strong> @Model.Date.ToShortTimeString()</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RoomId" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Slet Booking</button>
            <a asp-action="Index" asp-controller="StudentDashboard" class="btn btn-secondary">Annuller</a>
        </div>
    </form>
</div>
</body>
</html>